@model VacationRequestViewModel
@{
    Layout = "_Layout";
}
<!--Index-->
<div asp-validation-summary="All"></div>
<div id="vacationFormIndex" class="container">
    <!-- Contact Section-->
    <section class="page-section" id="contact">
        <div class="container">
            <!-- Contact Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Tələbnamənin yaradılması</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Contact Section Form-->
            <div class="row justify-content-center">
                <!-- * * * * * * * * * * * * * * *-->
                <!-- * * SB Forms Contact Form * *-->
                <!-- * * * * * * * * * * * * * * *-->
                <!-- This form is pre-integrated with SB Forms.-->
                <!-- To make this form functional, sign up at-->
                <!-- https://startbootstrap.com/solution/contact-forms-->
                <!-- to get an API token!-->
                <!-- Start Vacation-->
                <form class="mb-lg-8" method="Post" asp-controller="Vacation" asp-action="CreateVacationRequset">
                    <div class="col-md-12">
                        <label for="inputName" class="form-label">Ad,Soyad,Ata adı</label>
                        <input type="text" class="form-control" id="inputName" asp-for="VacationRequestDto.VacationerFullName">
                        <span asp-validation-for="VacationRequestDto.VacationerFullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label for="inputPosition" class="form-label">Vəzifə</label>
                        <input type="text" class="form-control" id="inputPosition" asp-for="VacationRequestDto.VacationerPosition">
                        <span asp-validation-for="VacationRequestDto.VacationerPosition" class="text-danger"></span>
                    </div>
                    <div class="col-md-8">
                        <div id="date-picker-example" class="md-form md-outline input-with-post-icon datetimepicker">
                            <label for="startVacationInput" style="color: #4f4f4f ">Məzuniyyətin başlama tarixi</label>
                            <input type="date" id="startVacationInput" class="form-control" asp-for="VacationRequestDto.StartVacation">
                            <span asp-validation-for="VacationRequestDto.StartVacation" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <div class="col-md-8">
                            <div id="date-picker-example" class="md-form md-outline input-with-post-icon datetimepicker">
                                <label for="endVacationInput" style="color: #4f4f4f ">Məzuniyyətin bitmə tarixi</label>
                                <input type="date" id="endVacationInput" class="form-control" asp-for="VacationRequestDto.EndVacation">
                                <span asp-validation-for="VacationRequestDto.EndVacation" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4" style="margin-top:25px;">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="IsIncludedWeekend" value="true" id="isWeekendIncluded" asp-for="VacationRequestDto.IsIncludedWeekend">
                                <label class="form-check-label " for="isWeekendIncluded" >
                                    Həftə sonu daxildirmi?
                                </label>
                                <span asp-validation-for="VacationRequestDto.IsIncludedWeekend" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <label for="replacmentPerson" class="form-label">Əvəz edən şəxsin Ad,Soyad,Ata adı</label>
                        <input type="text" class="form-control" id="replacmentPerson" asp-for="VacationRequestDto.ReplacementPerson">
                        <span asp-validation-for="VacationRequestDto.ReplacementPerson" class="text-danger"></span>
                    </div>
                    <div class="col-md-12" style="margin-top:17px">
                        <select class="form-select form-select-lg mb-4" aria-label=".form-select-lg" asp-for="VacationRequestDto.VacationTypeId"
                                asp-items="@(new SelectList(Model.VacationTypes, nameof(Model.VacationType.Id), nameof(Model.VacationType.Name)))">
                            <option value="0">Məzuniyyət növünü seçin</option>
                        </select>
                        <span asp-validation-for="VacationRequestDto.VacationTypeId" class="text-danger"></span>
                    </div>
                    <div class="col-md-8" style="margin-top:17px">
                        <button type="submit" class="button-accept">Yarat</button>
                    </div>
                </form>

            </div>
        </div>
    </section>
</div>
<!--End Index-->
<script>
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>